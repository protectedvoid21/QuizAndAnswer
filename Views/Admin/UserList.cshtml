@model IEnumerable<AppUser>

@{ 
    Layout = "_Layout";
}

<style>
    .action-group {
        display: flex;
    }

    .btn-info {
        flex: auto;
        width: 40%;
        text-align: center;
        padding: 1px;
        margin: 1px;
    }
</style>

<h2>User list</h2>
<p>User count : @Model.Count()</p>
<hr />
<table class="table-bordered" style="width: 100%">
    <tr class="table-dark">
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach(var user in Model) {
        <tr>
            <th>@user.Id</th>
            <th>@user.UserName</th>
            <th>@user.Email</th>
            <th class="action-group">
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn-info">Edit</a>
                <a asp-action="EditUserRole" asp-route-id="@user.Id" class="btn-info">Roles</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn-info">Delete</a>
            </th>
        </tr>
    }
</table>